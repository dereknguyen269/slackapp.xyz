<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <%= render 'layouts/messages' %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.input :email, required: false, autofocus: true, label: false, input_html: { class: 'form-control', placeholder: 'Email' } %>
                        </div>
                        <div class="form-group">
                            <%= f.input :password, required: false, label: false, input_html: { class: 'form-control', placeholder: 'Password' } %>
                        </div>
                        <div class="checkbox">
                            <label>
                                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                            </label>
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <%= f.button :submit, "Log in", class: 'btn btn-lg btn-success btn-block' %>
                    </fieldset>
                <% end %>
            </div>
        </div>
    </div>
</div>
