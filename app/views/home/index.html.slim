doctype html
html lang="en"
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type" /
    meta charset="utf-8" /
    title SlackApp | Home
    meta content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0" name="viewport" /
    link href="#{asset_url('favicon-144.png')}" rel=("shortcut icon") /
    link href="#{asset_url('favicon-144.png')}" rel="apple-touch-icon" sizes="144x144" /
    link href="#{asset_url('favicon-114.png')}" rel="apple-touch-icon" sizes="114x114" /
    link href="#{asset_url('favicon-72.png')}" rel="apple-touch-icon" sizes="72x72" /
    link href="#{asset_url('favicon-57.png')}" rel="apple-touch-icon" sizes="57x57" /
    = stylesheet_link_tag    'home', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'home', 'data-turbolinks-track' => true
    = csrf_meta_tags
  body
    section#parent.animsition
      / = image_tag 'logo.png', alt: '', class: 'quick fadeIn fixed align-bottom align-right mt50 main-logo'
      #leftSide.color
        #home.col-sm-8.col-sm-offset-2.col-xs-8.col-xs-offset-2
          .h-content.top-25
            h1.mid.animated.fadeInUp.mb30.m-heading.fw700
              | Stay tuned
              br/
              | we're launching soon.
              br/
            .mt40.slow.animated.fadeInUp
              #subscribe.fadeup.vertical.compress
                form#subscribe-form.vertical-form.compressed-form action="#{contact_path}" method="POST"
                  = hidden_field_tag :authenticity_token, form_authenticity_token
                  input.input-email.round.mr10 name="EMAIL" placeholder=("Email Address") type="email" /
                  button.submit.btn-solid.round.input-submit name="subscribe" type="submit"
                    i.fa.fa-paper-plane aria-hidden="true"
          .copyright.quick.fadeIn.align-bottom.fixed
            p.block.fw400
              | Â© 2017 - Made with&nbsp;
              i.fa.fa-heart aria-hidden="true"
              | &nbsp;by&nbsp;
              span.notoSerif.italic.fw600 SlackApp.xyz
          .vertical-result
            #subscribe-result.vertical-result.fixed.col-sm-10.align-bottom
      #rightSide.visible.img-only
